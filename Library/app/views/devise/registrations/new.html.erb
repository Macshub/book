<% content_for :title, I18n.t("devise.registrations.new.title") %>
<div class="row">
  <div class="small-12 large-6 large-offset-3 columns">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "custom" }) do |f| %>
      <fieldset>
        <legend><%= I18n.t "devise.registrations.new.title" %></legend>
        <%= devise_error_messages! %>
        <%= f.label :email, I18n.t("form.email") %>
        <%= f.email_field :email, :autofocus => true %>
        <%= f.label :password, I18n.t("form.password") %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation, I18n.t("form.password_confirmation") %>
        <%= f.password_field :password_confirmation %>
        <%= f.submit I18n.t("devise.registrations.new.title"), :class => "button" %>
      </fieldset>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
